<!DOCTYPE aesl-source>
<network>
<node nodeId="1" name="thymio-II">var state[4] = [0,0,0,0]
var new_state[4] = [0,0,0,0]

timer.period[0] = 0
call sound.system(-1)
call leds.top(0,0,0)
call leds.bottom.left(0,0,0)
call leds.bottom.right(0,0,0)
call leds.circle(0,0,0,0,0,0,0,0)

sub display_state
	call leds.circle(0,state[1]*32,0,state[3]*32,0,state[2]*32,0,state[0]*32)

onevent buttons
	if button.forward == 1 then
		motor.left.target = 200
		motor.right.target = 200
	end
	if button.forward == 1 then
		call leds.top(0,0,32)
	end
	if button.forward == 1 then
		new_state[0] = 0
		new_state[1] = 0
	end
	if button.backward == 1 then
		motor.left.target = 0
		motor.right.target = 0
	end
	if button.backward == 1 then
		call leds.top(0,0,0)
	end
	if button.backward == 1 then
		new_state[0] = 0
		new_state[1] = 0
	end

	call math.copy(state, new_state)
	callsub display_state

onevent prox
	if prox.ground.reflected[0] &lt; 150 and prox.ground.reflected[1] &lt; 150 then
		motor.left.target = 0
		motor.right.target = 0
	end
	if prox.ground.reflected[0] &lt; 150 and prox.ground.reflected[1] &lt; 150 then
		call leds.top(0,0,0)
	end
	if prox.horizontal[5] > 2500 then
		call leds.top(32,0,0)
	end
	if prox.horizontal[5] > 2500 then
		motor.left.target = -150
		motor.right.target = 200
	end
	if prox.horizontal[6] > 2500 then
		call leds.top(0,32,0)
	end
	if prox.horizontal[6] > 2500 then
		motor.left.target = 200
		motor.right.target = -150
	end
	if prox.horizontal[2] > 2500 and state[0] == 0 then
		motor.left.target = 200
		motor.right.target = 200
	end
	if prox.horizontal[2] > 2500 and state[0] == 0 then
		call leds.top(32,32,0)
	end
	if prox.horizontal[2] > 2500 and state[0] == 0 then
		timer.period[0] = 974
	end

	call math.copy(state, new_state)
	callsub display_state

onevent timer0
	timer.period[0] = 0
	motor.left.target = 0
	motor.right.target = 0
	new_state[0] = 1

	call math.copy(state, new_state)
	callsub display_state
<toolsPlugins>
