<settings advanced-mode="true" color-scheme="0"/>

<buttonset eb0="1" eb1="0" eb2="0" eb3="0" eb4="0" action-name="move" event-name="button" state="0" ab0="200" ab1="200"/>

<buttonset eb0="1" eb1="0" eb2="0" eb3="0" eb4="0" action-name="colortop" event-name="button" state="0" ab0="0" ab1="0" ab2="32"/>

<buttonset eb0="1" eb1="0" eb2="0" eb3="0" eb4="0" action-name="statefilter" event-name="button" state="0" ab0="2" ab1="2" ab2="0" ab3="0"/>

<buttonset eb0="0" eb1="0" eb2="1" eb3="0" eb4="0" action-name="move" event-name="button" state="0" ab0="0" ab1="0"/>

<buttonset eb0="0" eb1="0" eb2="1" eb3="0" eb4="0" action-name="colortop" event-name="button" state="0" ab0="0" ab1="0" ab2="0"/>

<buttonset eb0="0" eb1="0" eb2="1" eb3="0" eb4="0" action-name="statefilter" event-name="button" state="0" ab0="2" ab1="2" ab2="0" ab3="0"/>

<buttonset eb0="1" eb1="1" action-name="move" event-name="proxground" state="0" ab0="0" ab1="0"/>

<buttonset eb0="1" eb1="1" action-name="colortop" event-name="proxground" state="0" ab0="0" ab1="0" ab2="0"/>

<buttonset eb0="0" eb1="0" eb2="0" eb3="0" eb4="0" eb5="2" eb6="0" action-name="colortop" event-name="prox" state="0" ab0="32" ab1="0" ab2="0"/>

<buttonset eb0="0" eb1="0" eb2="0" eb3="0" eb4="0" eb5="2" eb6="0" action-name="move" event-name="prox" state="0" ab0="-150" ab1="200"/>

<buttonset eb0="0" eb1="0" eb2="0" eb3="0" eb4="0" eb5="0" eb6="2" action-name="colortop" event-name="prox" state="0" ab0="0" ab1="32" ab2="0"/>

<buttonset eb0="0" eb1="0" eb2="0" eb3="0" eb4="0" eb5="0" eb6="2" action-name="move" event-name="prox" state="0" ab0="200" ab1="-150"/>

<buttonset eb0="0" eb1="0" eb2="2" eb3="0" eb4="0" eb5="0" eb6="0" action-name="move" event-name="prox" state="2" ab0="200" ab1="200"/>

<buttonset eb0="0" eb1="0" eb2="2" eb3="0" eb4="0" eb5="0" eb6="0" action-name="colortop" event-name="prox" state="2" ab0="32" ab1="32" ab2="0"/>

<buttonset eb0="0" eb1="0" eb2="2" eb3="0" eb4="0" eb5="0" eb6="0" action-name="timer" event-name="prox" state="2" ab0="974"/>

<buttonset action-name="move" event-name="timeout" state="0" ab0="0" ab1="0"/>

<buttonset action-name="statefilter" event-name="timeout" state="0" ab0="1" ab1="0" ab2="0" ab3="0"/>

<buttonset/>

</vplroot>
</ThymioVisualProgramming>
</toolsPlugins>
</node>
</network>
