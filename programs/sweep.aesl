<!DOCTYPE aesl-source>
<network>
<node nodeId="1" name="thymio-II">var state[4] = [0,0,0,0]
var new_state[4] = [0,0,0,0]

timer.period[0] = 0
call sound.system(-1)
call leds.top(0,0,0)
call leds.bottom.left(0,0,0)
call leds.bottom.right(0,0,0)
call leds.circle(0,0,0,0,0,0,0,0)

sub display_state
	call leds.circle(0,state[1]*32,0,state[3]*32,0,state[2]*32,0,state[0]*32)

onevent buttons
	if button.center == 1 then
		motor.left.target = 0
		motor.right.target = 0
	end
	if button.forward == 1 and state[0] == 0 and state[1] == 0 and state[2] == 0 and state[3] == 0 then
		motor.left.target = 300
		motor.right.target = 300
	end
	if button.forward == 1 and state[0] == 0 and state[1] == 0 and state[2] == 0 and state[3] == 0 then
		timer.period[0] = 3995
	end

	call math.copy(state, new_state)
	callsub display_state

onevent timer0
	timer.period[0] = 0
	if state[0] == 0 and state[1] == 0 and state[2] == 0 and state[3] == 0 then
		new_state[0] = 0
		new_state[1] = 1
		new_state[2] = 0
		new_state[3] = 0
	end
	if state[0] == 0 and state[1] == 0 and state[2] == 0 and state[3] == 0 then
		motor.left.target = 250
		motor.right.target = -250
	end
	if state[0] == 0 and state[1] == 0 and state[2] == 0 and state[3] == 0 then
		timer.period[0] = 1001
	end
	if state[0] == 0 and state[1] == 1 and state[2] == 0 and state[3] == 0 then
		new_state[0] = 0
		new_state[1] = 0
		new_state[2] = 0
		new_state[3] = 1
	end
	if state[0] == 0 and state[1] == 1 and state[2] == 0 and state[3] == 0 then
		motor.left.target = 200
		motor.right.target = 200
	end
	if state[0] == 0 and state[1] == 1 and state[2] == 0 and state[3] == 0 then
		timer.period[0] = 3006
	end
	if state[0] == 0 and state[1] == 0 and state[2] == 0 and state[3] == 1 then
		new_state[0] = 0
		new_state[1] = 0
		new_state[2] = 1
		new_state[3] = 0
	end
	if state[0] == 0 and state[1] == 0 and state[2] == 0 and state[3] == 1 then
		motor.left.target = 250
		motor.right.target = -250
	end
	if state[0] == 0 and state[1] == 0 and state[2] == 0 and state[3] == 1 then
		timer.period[0] = 949
	end
	if state[0] == 0 and state[1] == 0 and state[2] == 1 and state[3] == 0 then
		new_state[0] = 1
		new_state[1] = 0
		new_state[2] = 0
		new_state[3] = 0
	end
	if state[0] == 0 and state[1] == 0 and state[2] == 1 and state[3] == 0 then
		motor.left.target = 300
		motor.right.target = 300
	end
	if state[0] == 0 and state[1] == 0 and state[2] == 1 and state[3] == 0 then
		timer.period[0] = 3975
	end
	if state[0] == 1 and state[1] == 0 and state[2] == 0 and state[3] == 0 then
		motor.left.target = 0
		motor.right.target = 0
	end

	call math.copy(state, new_state)
	callsub display_state
<toolsPlugins>
