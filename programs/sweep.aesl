<buttonset action-name="move" event-name="timeout" state="170" ab0="250" ab1="-250"/>

<buttonset action-name="timer" event-name="timeout" state="170" ab0="1001"/>

<buttonset action-name="statefilter" event-name="timeout" state="166" ab0="2" ab1="2" ab2="2" ab3="1"/>

<buttonset action-name="move" event-name="timeout" state="166" ab0="200" ab1="200"/>

<buttonset action-name="timer" event-name="timeout" state="166" ab0="3006"/>

